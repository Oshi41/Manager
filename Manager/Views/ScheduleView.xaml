<UserControl x:Class="Manager.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Manager.Views"
             xmlns:viewModels="clr-namespace:Manager.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:control="clr-namespace:Manager.Control"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance {x:Type viewModels:ScheduleViewModel}}">

    <UserControl.Resources>

        <system:Double x:Key="CellWidth">32</system:Double>
        <system:Double x:Key="ItemHeight">32</system:Double>


        <DataTemplate DataType="{x:Type viewModels:WeekItem}">
            <local:WeekItemView />
        </DataTemplate>

    </UserControl.Resources>


    <materialDesign:DialogHost Identifier="LessonHost">
        <materialDesign:DialogHost Identifier="PupilHost">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"
                                      MinWidth="150" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <DockPanel>
                    <Button DockPanel.Dock="Left"
                            Style="{DynamicResource MaterialDesignFloatingActionButton}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="32"
                            Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}"
                            Margin="5 5 0 0"
                            ToolTip="Добавить ученика">
                        <Button.Content>
                            <Viewbox>
                                <materialDesign:PackIcon Kind="Plus"
                                                         Foreground="{DynamicResource SecondaryAccentBrush}" />
                            </Viewbox>
                        </Button.Content>
                    </Button>
                </DockPanel>

                <!-- Даты -->
                <ItemsControl Grid.Column="1"
                              Grid.Row="0" />


                <!-- Список учеников -->
                <ItemsControl Grid.Column="0"
                              Grid.Row="1"
                              ItemsSource="{Binding Pupils}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding Pupils.Count}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModels:PupilViewModel}">
                            <DockPanel Height="{StaticResource ItemHeight}">
                                <TextBox Text="{Binding Path=Name}"
                                         DockPanel.Dock="Left"
                                         HorizontalAlignment="Left"
                                         IsReadOnly="True"
                                         MinWidth="120"
                                         Margin="0 0 5 0" />

                                <Button DockPanel.Dock="Left"
                                        Style="{DynamicResource MaterialDesignFloatingActionButton}"
                                        HorizontalAlignment="Left"
                                        Width="16"
                                        Command="{Binding Path=ChangePupilCommand}"
                                        Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}">
                                    <Button.Content>
                                        <Viewbox>
                                            <materialDesign:PackIcon Kind="Pencil"
                                                                     Foreground="{DynamicResource SecondaryAccentBrush}" />
                                        </Viewbox>
                                    </Button.Content>
                                </Button>

                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Расписание -->
                <ItemsControl Grid.Column="1"
                              Grid.Row="1"
                              ItemsSource="{Binding Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <control:UniformGridPanel Rows="{Binding Path=Pupils.Count}"
                                                      Orientation="Vertical"
                                                      Columns="{Binding Path=WeeksCount}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                </ItemsControl>


            </Grid>
        </materialDesign:DialogHost>
    </materialDesign:DialogHost>

</UserControl>